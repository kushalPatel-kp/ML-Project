pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/kushalPatel-kp/ML-Project'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t django_ml_app .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8000:8000 --name django_ml_container django_ml_app'
            }
        }
    }
}
